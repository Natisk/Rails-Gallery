.row
  .image_comments.col-lg-6
    %h1
      = "Comments for #{@image.title}"
    - @comments.each do |img_comment|
      .img_comment
        .comment_user_name
          %strong
            = img_comment.user.name
          %span
            = img_comment.created_at.strftime('%Y-%m-%d %H:%M')
        .comment_body
          = img_comment.body
  .more_comments.btn.btn-primary
    More comments
  .col-lg-6.text-right
    .for_image
      = image_tag @image.img_name.url, id: "#{@image.id}"
      - if user_signed_in?
        - if @image.likes.any? {|like| like[:user_id] == current_user.id}
          #like_down.btn.btn-danger.for_like
            DisLike
        - else
          #like_up.btn.btn-primary.for_like
            Like
      .image_likes.btn.btn-danger
        Total likes (
        %span= @image.likes_count
        )
    - if user_signed_in?
      .comments_form
        = render partial: 'comments/form'
    -else
      .comment_tips
        You can leave comments and likes if you
        = link_to 'sign in', new_user_session_path