.col-lg-4
  %h2
    = t('views.devise.resend_unlock')
  = form_for(resource, as: resource_name, url: unlock_path(resource_name), html: {method: :post}) do |f|
    = devise_error_messages!
    .form-group
      = f.email_field :email, autofocus: true, class: 'form-control', placeholder: "#{t('views.devise.email_holder')}"
    .form-group
      = f.submit t('views.devise.resend_unlock'), class: 'btn btn-default'
  = render 'devise/shared/links'
