.row
  .col-lg-4
    %h2
      = t('views.devise.change_your_pass')
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f|
      = devise_error_messages!
      = f.hidden_field :reset_password_token
      .form-group
        = f.password_field :password, autofocus: true, class: 'form-control', placeholder: "#{t('views.devise.new_pass')}"
      .form-group
        = f.password_field :password_confirmation, class: 'form-control', placeholder: "#{t('views.devise.pass_confirm')}"
      .form-group
        = f.submit t('views.devise.change_pass'), class: 'btn btn-default'
    = render 'devise/shared/links'