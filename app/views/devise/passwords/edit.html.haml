.col-lg-4
  %h2 Change your password
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f|
    = devise_error_messages!
    = f.hidden_field :reset_password_token
    .form-group
      = f.password_field :password, autofocus: true, class: 'form-control', placeholder: 'New password'
    .form-group
      = f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password confirmation'
    .form-group
      = f.submit 'Change my password', class: 'btn btn-default'
  = render 'devise/shared/links'
